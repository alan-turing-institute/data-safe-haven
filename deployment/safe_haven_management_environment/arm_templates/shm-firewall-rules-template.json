{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "FirewallName": {
            "type": "string"
        },
        "FirewallPublicIpId": {
            "type": "string"
        },
        "FirewallSubnetId": {
            "type": "string"
        },
        "Location": {
            "type": "string"
        },
        "SubnetCidrIdentity": {
            "defaultValue": "10.0.0.0/24",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/azureFirewalls",
            "apiVersion": "2020-04-01",
            "name": "[parameters('FirewallName')]",
            "location": "[parameters('Location')]",
            "properties": {
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "threatIntelMode": "Alert",
                "additionalProperties": {},
                "ipConfigurations": [
                    {
                        "name": "AzureFirewallIpConfiguration",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[parameters('FirewallPublicIpId')]"
                            },
                            "subnet": {
                                "id": "[parameters('FirewallSubnetId')]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [
                    {
                        "name": "IdentitySubnet",
                        "properties": {
                            "priority": 1000,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "AzureActiveDirectory",
                                    "protocols": [
                                        "TCP"
                                    ],
                                    "sourceAddresses": [
                                        "[parameters('SubnetCidrIdentity')]"
                                    ],
                                    "destinationAddresses": [
                                        "AzureActiveDirectory"
                                    ],
                                    "destinationPorts": [
                                        "80",
                                        "443"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "applicationRuleCollections": [
                    {
                        "name": "IdentitySubnet",
                        "properties": {
                            "priority": 1000,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "WindowsUpdate",
                                    "protocols": [
                                        {
                                            "protocolType": "Http",
                                            "port": 80
                                        },
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        },
                                        {
                                            "protocolType": "Mssql",
                                            "port": 1433
                                        }
                                    ],
                                    "fqdnTags": [
                                        "WindowsUpdate"
                                    ],
                                    "targetFqdns": [],
                                    "sourceAddresses": [
                                        "[parameters('SubnetCidrIdentity')]"
                                    ],
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "Google",
                                    "protocols": [
                                        {
                                            "protocolType": "Http",
                                            "port": 80
                                        },
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "google.com"
                                    ],
                                    "sourceAddresses": [
                                        "[parameters('SubnetCidrIdentity')]"
                                    ],
                                    "sourceIpGroups": []
                                }
                            ]
                        }
                    }
                ],
                "natRuleCollections": []
            }
        }
    ]
}